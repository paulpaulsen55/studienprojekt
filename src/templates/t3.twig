{% extends "base.twig" %}

{% block title %}T3{% endblock %}

{% block content %}
    <h1 class="text-center text-5xl font-bold my-10">Testfall 3 - Gleichzeitige Geldüberweisungen</h1>
    <section class="mx-auto w-fit border border-gray-200 bg-white">
        {% if users %}
            <div class="flex items-center flex-col p-10 gap-5 text-2xl">
                {% if usersOld %}
                    <p>Alte Kontostände:</p>
                    <table class="text-2xl border-collapse">
                        <thead>
                            <tr class="border-b">
                                <th class="border-r">Name</th>
                                <th>Balance</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for user in usersOld %}
                                <tr class="border-b">
                                    <td class="border-r">{{ user['name'] }}</td>
                                    <td>{{ user['balance'] }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% endif %}
                <p>Neue Kontostände:</p>
                <table class="text-2xl border-collapse broder border-gray-200">
                    <thead>
                        <tr class="border-b">
                            <th class="border-r">Name</th>
                            <th>Balance</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr class="border-b">
                                <td class="border-r">{{ user['name'] }}</td>
                                <td>{{ user['balance'] }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
        <div class="flex items-center flex-col p-10 gap-5">
            <h2 class="text-3xl mb-5">Suche dir eine Bibliothek aus:</h2>
            <a href="/t3/parallel" class="text-xl font-bold text-white bg-[#669933] hover:opacity-80 px-5 py-2">parallel</a>
            <a href="/t3/fibers" class="text-xl font-bold text-white bg-[#669933] hover:opacity-80 px-5 py-2">Fibers</a>
        </div>
    </section>

{% endblock %}
